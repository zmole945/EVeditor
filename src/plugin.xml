<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="net.sourceforge.veditor"
   name="verilog plugin"
   version="0.2.0"
   provider-name="tadashi"
   class="net.sourceforge.veditor.VerilogPlugin">

   <runtime>
      <library name="veditor.jar"/>
      <export name="*"/>
   </runtime>
   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.ui.views"/>
   </requires>
   
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Verilog Editor"
            icon="icons/vlog_src.gif"
            extensions="v"
            contributorClass="net.sourceforge.veditor.editor.HdlActionContributor"
            class="net.sourceforge.veditor.editor.VerilogEditor"
            id="net.sourceforge.veditor.editor.VerilogEditor">
      </editor>
   </extension>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Verilog Editor"
            icon="icons/vlog_src.gif"
            extensions="vhd"
            contributorClass="net.sourceforge.veditor.editor.HdlActionContributor"
            class="net.sourceforge.veditor.editor.VhdlEditor"
            id="net.sourceforge.veditor.editor.VhdlEditor">
      </editor>
   </extension>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Eclipse Verilog Editor"
            id="veditor">
      </category>
      <view
            name="Module Hierarchy"
            icon="icons/hierarchy.gif"
            category="veditor"
            class="net.sourceforge.veditor.editor.ModuleHierarchyView"
            id="net.sourceforge.veditor.editor.ModuleHierarchyView">
      </view>
   </extension>

   <extension
         point = "org.eclipse.ui.preferencePages">
      <page
            id="net.sourceforge.veditor.editor.PreferencePage"
	        class="net.sourceforge.veditor.editor.PreferencePage"
            name="Verilog Editor">
      </page>
   </extension>

   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
         id="net.sourceforge.veditor.actions"
         targetID="net.sourceforge.veditor.editor.VerilogEditor">
         <action
            id="net.sourceforge.veditor.actions.compile"
            label="&amp;Compile"
            accelerator="Ctrl+0"
            menubarPath="edit/additions"
            class="net.sourceforge.veditor.actions.CompileAction">
         </action> 
      </editorContribution> 
   </extension>

<!--
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="net.sourceforge.veditor.VerilogPreferenceInitializer"/>
   </extension>
-->

</plugin>

